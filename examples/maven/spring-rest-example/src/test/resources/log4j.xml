<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n"/>
		</layout>
	</appender>
	
	<category name="org.hibernate">
		<priority value="error"/>
	</category>

	<!-- Log the actual Hibernate Query Language (HQL) expression -->
	<!-- <category name="org.hibernate.impl.SessionImpl"> <priority value="error" /> </category> -->
	<!-- Log the substitution parameters in the HQL expression -->
	<category name="org.hibernate.engine.QueryParameters">
		<priority value="error"/>
	</category>

	<category name="org.springframework">
		<priority value="error"/>
	</category>

	<category name="org.springframework.jdbc">
		<priority value="debug"/>
	</category>





	<!-- Show the SQL statements to the log -->
	<category name="org.hibernate.SQL">
		<priority value="debug"/>
	</category>

	<!-- Display parameter info (and other junk) -->

	<category name="org.hibernate.type">
		<priority value="error"/>
	</category>

	<category name="org.apache.catalina.core">
		<priority value="error"/>
	</category>
	<category name="org.apache.catalina.loader">
		<priority value="warn"/>
	</category>

	<root>
		<priority value="debug"/>
		<appender-ref ref="stdout"/>
	</root>

</log4j:configuration>